	palette="3" 
	bgColor="FFFFFF" 
	thmFillColor="99FF99" 
	bgAlpha="0"
	lowerLimit="-40" 
	upperLimit="120" 
	numberSuffix=" C" 
	majorTMHeight="4"
	minorTMNumber="5" 
	chartTopMargin="25" 
	chartLeftMargin="20"
	thmbulbRadius="20"
	showBorder="0" 
	useSameFillColor="0" 
	showTickValues="1"
	decimalPrecision="1" 
	ticksOnRight='1' 
	>
	<value>78.9</value>
</chart>

